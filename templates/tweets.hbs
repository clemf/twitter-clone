<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input id="author" value=author class="form-control"}}
    </div>
    <div class="form-group">
      <label for="text">Put your tweet here</label>
      {{textarea maxlength="141" rows="3" cols="60" id="text" value=text  class="form-control"}}
    </div>
    <button class="btn btn-default"{{action "addTweet"}}>Add tweet</button>
  </form>
</div>

<br />
<ul class="list-group">
  {{#each controller}}
    <span {{action "toggleShown"}}><li class="list-group-item">{{author}}: {{text}}</li></span>
    {{#if shown}}
      <div class="well">
        {{timeStamp}}
        <h4>Comments:</h4>
        <ul class="list-group">
          {{#each comment in comments}}
            <li class="list-group-item">{{comment}}</li>
          {{/each}}
        </ul>
        <form>
          <label for="comment">Comment</label>
          {{textarea value=comment class="form-control"}}
          <button {{action "addComment"}} class="btn btn-default">Submit</button>
        </form>
      </div>
    {{/if}}

  {{/each}}
</ul>
